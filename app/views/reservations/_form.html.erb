<h3>予約する</h3>

<%= form_for([@room, @room.reservations.new]) do |f| %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
   <table>
     <tr>
       <th><%= f.label :start_date ,"開始日" %></th>
       <td><%= f.date_field :start_date %></td>
     </tr>

     <tr>
       <th><%= f.label :end_date ,"終了日" %></th>
       <td><%= f.date_field :end_date %></td>
     </tr>
 
     <tr>
       <th><%= f.label :people ,"人数" %></th>
       <td><%= f.number_field :people %></td>
     </tr>
   </table>
 
   <div>
     <ul>
       <li><%= f.submit "予約完了する"%></li>
       <li><%= link_to "検索結果に戻る", :back %></li>
     </ul>
   </div>
 <% end %>